@using ManagerPeople.Models.Enum
@model Person

@{
    ViewData["Title"] = "Create Person";
}

<h1>Create person register</h1>


<form asp-controller="Person" asp-action="Create">

    <div class="row g-2">
        <div class="col-12 col-lg-6">
            <label for="FullName" class="form-label">Full Name*</label>
            <input type="text" class="form-control" id="FullName" asp-for="Name"
                   placeholder="Insert the full name"></input>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="col-12 col-lg-6">
            <label for="Email" class="form-label">Email*</label>
            <input type="text" class="form-control" id="Email" asp-for="Email"
                   placeholder="Insert the email of the person"></input>
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="col-12 col-lg-6">
            <label for="BloodType" class="form-label">Blood Type*</label>
            <select class="form-select" id="BloodType" asp-for="BloodType">
                @foreach (var bloodType in Enum.GetValues(typeof(EBloodType)))
                {
                    if (Model?.BloodType == (EBloodType)bloodType)
                    {
                        <option selected value="@bloodType">@bloodType</option>
                    }
                    else
                    {
                        <option value="@bloodType">@bloodType</option>
                    }
                }
            </select>
            <span asp-validation-for="BloodType" class="text-danger"></span>
        </div>
        <div class="col-12 col-lg-6">
            <label for="CPF" class="form-label">CPF</label>
            <input type="text" class="form-control" id="CPF" asp-for="CPF"
                   placeholder="Insert the CPF of the person"></input>
            <span asp-validation-for="CPF" class="text-danger"></span>
        </div>
        <div class="col-12 col-lg-6">
            <label for="BirthDate">Birth Date</label>
            <input type="date" id="BirthDate" class="form-control" asp-for="BirthDate"/>
            <span asp-validation-for="BirthDate" class="text-danger"></span>
        </div>
        
        <div class="form-group">
            <input type="submit" value="Save" class="btn btn-primary" />
        </div>
    </div>
    
    


</form>